.detail-img {
  width: 100%;
  height: 400rpx;
}

.ava-user {
  display: flex;
  margin-top: 16rpx;
  font-size: 22rpx;
  color: #666;
}

.ava-user .ava, .ava-user .user, .ava-user .date {
  margin-left: 16rpx;
}

.ava-user .ava {
  display: flex;
  align-items: center;
  width: 50rpx;
  height: 50rpx;
}

.ava-user .user {
  display: flex;
  align-items: center;
}

.ava-user .date {
  display: flex;
  align-items: center;
  font-size: 18rpx;
}

.post-title {
  padding-left: 22rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.share {
  display: flex;
  flex-direction: row-reverse;
  margin-top: 26rpx;
}

.share .share-img {
  width: 70rpx;
  height: 70rpx;
}

.share .share-img-container {
  display: flex;
  margin-right: 24rpx;
}

.share .share-img:first-child {
  margin-right: 22rpx;
}

.share-line {
  position: relative;
  top: -35rpx;
  width: 700rpx;
  z-index: -1;
  height: 1px;
  margin: 0 26rpx;
  background-color: #ddd;
}

.content {
  padding: 0 26rpx;
  font-size: 24rpx;
  color: #666;
}