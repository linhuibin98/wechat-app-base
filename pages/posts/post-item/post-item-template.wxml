<template name='art'>
  <view class="art-container" bind:tap='handleTap' data-postid='{{postId}}'>
    <view class="avatar-time">
      <image class="user-avatar" src="{{avatar}}"></image>
      <text>{{date}}</text>
    </view>
    <text class="art-title">{{title}}</text>
    <image class="art-img" src="{{imgSrc}}"></image>
    <text class="art-detail">{{content}}</text>
    <view class="coll-read">
      <view class="coll">
        <image class="icon" src="/images/icon/chat.png"></image>
        <text>{{reading}}</text>
      </view>
      <view class="read">
        <image class="icon" src="/images/icon/view.png"></image>
        <text>{{collection}}</text>
      </view>
    </view>
  </view>
</template>