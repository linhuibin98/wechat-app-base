/* pages/posts/posts.wxss */

.head-swiper {
  width: 100%;
  height: 600rpx;
}

.head-swiper image {
  width: 100%;
  height: 600rpx;
}

.art-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}
.avatar-time {
  display: flex;
  align-content: center;
  margin-top: 10rpx;
}

.avatar-time .user-avatar {
  width: 50rpx;
  height: 50rpx;
}

.avatar-time text {
  display: flex;
  line-height: 50rpx;
  font-weight: bold;
  font-size: 22rpx;
  margin-left: 20rpx;
}

.art-title {
  margin: 20rpx 0;
  padding-left: 16rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.art-img {
  width: 100%;
  height: 300rpx;
}

.art-detail {
  padding: 28rpx 0 0 20rpx;
  font-size: 26rpx;
  color: #666;
}

.coll-read {
  display: flex;
}

.coll-read .icon {
  width: 26rpx;
  height: 26rpx;
}

.coll-read text {
  font-size: 26rpx;
  padding-left: 16rpx;
}

.coll-read .coll, .read {
  margin: 22rpx 0 0 16rpx;
}