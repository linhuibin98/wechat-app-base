page {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  background-color: #b3d4db;
}

.container {
  display: flex;
  flex-direction: column;
  margin-top: -200rpx;
}

.user-avatar {
  width: 200rpx;
  height: 200rpx;
}

.user-name {
  margin-top: 80rpx;
  padding: 0 20rpx;
}

.btn-container {
  margin-top: 160rpx;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  border: 1px solid #405f80;
  border-radius: 5px;
  text-align: center;
  font-size: 22rpx;
  font-weight: bold;
  color: #405f80;
}